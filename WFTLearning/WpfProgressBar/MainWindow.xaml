<Window x:Class="WpfProgressBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProgressBar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <ProgressBar Margin="12" x:Name="Progress" Height="30" Width="220"></ProgressBar>
        <Button x:Name="StartLongRunningTask" Click="StartLongRunningTask_Click"
                Height="30" Width="140"
                Content="StartLongRunningTask"/>
    </StackPanel>
</Window>
