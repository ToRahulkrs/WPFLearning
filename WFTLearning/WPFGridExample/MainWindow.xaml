<Window x:Class="WPFGridExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGridExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="Red" Height="120"/>
        <Rectangle Fill="Aqua" Grid.Row="0" Grid.Column="1" Height="120"/>
        <Rectangle Fill="Yellow" Grid.Row="0" Grid.Column="2" Grid.RowSpan="2"/>
        <Rectangle Fill="Blue" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>
        <Rectangle Fill="Brown" Grid.Row="2" Grid.Column="2"/>
        <Rectangle Fill="Aquamarine" Grid.Row="2" Grid.Column="1"/>
        <Rectangle Fill="BlueViolet" Grid.Row="2" Grid.Column="0"/>


    </Grid>
</Window>
