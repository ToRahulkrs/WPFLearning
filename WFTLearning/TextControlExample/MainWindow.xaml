<Window x:Class="TextControlExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextControlExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="12">
        <TextBlock  Width="120" FontFamily="Verdana" FontSize="18" FontStyle="Italic" TextTrimming="CharacterEllipsis">
            <Run Text="Hello,"/> <LineBreak/>
            <Run Text="World"/>
        </TextBlock>

        <TextBox Width="120" Margin="6" Text="This is best wpf course" TextWrapping="NoWrap"/>
        <TextBox Width="120" Margin="6" Text="This is the best windowrepersentaionfortext" TextWrapping="Wrap"/>
        <TextBox Width="120" Margin="6" Text="This is best windowrepersentaionfortext" TextWrapping="WrapWithOverflow"/>
        <TextBox x:Name="InputTxt" Width="120" Margin="6" TextWrapping="WrapWithOverflow"
                   Text="Here is the example of spel checking"  SpellCheck.IsEnabled="true" />
        <Label Content="_Input" Target="InputTxt" Width="120"/>
    </StackPanel>
</Window>
